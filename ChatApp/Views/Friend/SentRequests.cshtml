@model List<ChatApp.ViewModels.SentRequestViewModel>

@{
    ViewData["Title"] = "Sent Requests";
}

<h2 class="mt-4">Sent Requests</h2>

@if (Model.Any())
{
    <ul class="list-group" id="requestsList">
        @foreach (var request in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@request.ReceiverFirstName @request.ReceiverLastName</span>
                <div>
                    <form method="post" action="@Url.Action("RemoveRequest", "Friend")" style="display: inline;">
                        <input type="hidden" name="receiverId" value="@request.ReceiverId" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove Request</button>
                    </form>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p id="noRequestsMessage">No sent requests.</p>
}
